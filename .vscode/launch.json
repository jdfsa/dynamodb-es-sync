{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest All",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect",
                "${workspaceRoot}\\src\\node_modules\\jest\\bin\\jest.js",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229,
            "cwd": "${workspaceFolder}\\src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/src/node_modules/mocha/bin/mocha",
            "args": [
                "${workspaceRoot}/src/*.test.js",
                "${workspaceRoot}/src/*/*.test.js"
            ],
            "cwd": "${workspaceRoot}",
            "env": {}
        }
    ]
}