    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/src/node_modules/mocha/bin/mocha",
            "args": [
                "${workspaceRoot}/src/*.test.js",
                "${workspaceRoot}/src/*/*.test.js"
            ],
            "cwd": "${workspaceRoot}",
            "env": {}
        }
    ]
}